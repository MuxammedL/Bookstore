<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookStore.styles.css" asp-append-version="true" />
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" />
    <link href="~/css/mycss.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&display=swap"
          rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="logo" asp-area="" asp-controller="Store" asp-action="Index">
                    <img src="~/images/logo.png" alt="logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index">Books List</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ListAllRoles">Roles</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                    <a class="nav-link float-right cart" asp-area="" asp-controller="Cart" asp-action="Index"><i class="fa-solid fa-cart-shopping"></i>Cart</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer>
        <div class="container">
            <div class="logo-description">
                <div class="logo">
                    <div class="img">
                        <img src="~/images/logo.png" alt="" />
                    </div>
                    <div class="title">
                        <h4>BookStore</h4>
                        <small>Book Store Website</small>
                    </div>
                </div>
                <div class="logo-body">
                    <p>
                        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Magnam
                        voluptates eius quasi reiciendis recusandae provident veritatis
                        sequi, dolores architecto dolor possimus quos
                    </p>
                </div>
                <div class="social-links">
                    <h4>Follow Us</h4>
                    <ul class="links">
                        <li>
                            <a asp-area="" asp-controller="Store" asp-action="Index"><i class="fa-brands fa-facebook-f"></i></a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Store" asp-action="Index"><i class="fa-brands fa-youtube"></i></a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Store" asp-action="Index"><i class="fa-brands fa-twitter"></i></a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Store" asp-action="Index"><i class="fa-brands fa-linkedin"></i></a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Store" asp-action="Index"><i class="fa-brands fa-instagram"></i></a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="our-store list">
                <h4>Our Store</h4>
                <div class="map" style="margin-top: 1rem">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d194472.7685304548!2d49.69014978146027!3d40.39473700784616!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d6bd6211cf9%3A0x343f6b5e7ae56c6b!2sBaku!5e0!3m2!1sen!2saz!4v1719166066469!5m2!1sen!2saz"
                            height="70"
                            style="width: 100%; border: none; border-radius: 5px"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
                <ul>
                    <li>
                        <a asp-area="" asp-controller="Store" asp-action="Index"><i class="fa-solid fa-location-dot"></i>Baku</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Store" asp-action="Index"><i class="fa-solid fa-phone"></i>+12 1345678991</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Store" asp-action="Index">
                            <i class="fa-solid fa-envelope"></i>layicovmuxammed@gmail.com
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
