<form asp-action="Index" class="mt-5 mb-4">

    <h3 class="heading">Books</h3>
    <div class="flex">
        <div class="f-group">
            <div class="group">
                <svg class="icon" aria-hidden="true" viewBox="0 0 24 24">
                    <g>
                        <path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path>
                    </g>
                </svg>
                <input type="text"
                       name="searchString"
                       placeholder="Title or Author"
                       class="input" />
            </div>
            <div class="group">
                <input type="number"
                       name="minPrice"
                       step="1"
                       placeholder="$min"
                       class="input price" />&nbsp;&#8212;&nbsp;<input type="number"
                                                                       name="maxPrice"
                                                                       step="1"
                                                                       placeholder="$max"
                                                                       class="input price" />
            </div>
        </div>
        <div>
            <input type="submit"
                   value="Filter"
                   class="filter btn btn-md" />
            <a asp-action="Index" class="clear btn btn-md float-right">Clear</a>
        </div>
    </div>

</form>


<div class="row">
    @foreach (var book in Model)
    {
        <div class="book">
            <div class="card my-2 store-card">
                <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@book.Id">
                    <img src="@book.ImageUrl" class="card-img-top card-img-custom">
                    <div class="card-body" style="height: 3em;">
                        <h5 class="mb-3">@book.Title</h5>
                    </div>
                    <div class="card-body">

                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.Id" class="learn-more">
                            <span class="circle" aria-hidden="true">
                                <span class="icon arrow"></span>
                            </span>
                            <span class="button-text">@book.Price.ToString("c")</span>
                        </a>
                    </div>
                </a>
            </div>
        </div>
    }
</div>
